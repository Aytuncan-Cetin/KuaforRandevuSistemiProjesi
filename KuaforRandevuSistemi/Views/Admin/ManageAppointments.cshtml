@model IEnumerable<Randevu>

@{
    ViewData["Title"] = "Randevuları Yönet";
}

<div class="container">
    <h2>Randevuları Yönet</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Tarih</th>
                <th>Çalışan</th>
                <th>İşlem</th>
                <th>Müşteri</th>
                <th>Onay Durumu</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var randevu in Model)
            {
                <tr>
                    <td>@randevu.Tarih</td>
                    <td>@randevu.Calisan.Ad</td>
                    <td>@randevu.Islem.Ad</td>
                    <td>@randevu.Musteri.Ad @randevu.Musteri.Soyad</td>
                    <td>@randevu.Onaylandi ? "Onaylı" : "Beklemede"</td>
                    <td>
                        @if (!randevu.Onaylandi)
                        {
                            <form asp-action="ApproveAppointment" method="post">
                                <input type="hidden" name="id" value="@randevu.Id" />
                                <button type="submit" class="btn btn-success">Onayla</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
