@model IEnumerable<Calisan>

@{
    ViewData["Title"] = "Çalışanları Yönet";
}

<div class="container">
    <h2>Çalışanları Yönet</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Uzmanlık Alanı</th>
                <th>Müsaitlik Durumu</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var calisan in Model)
            {
                <tr>
                    <td>@calisan.Ad</td>
                    <td>@calisan.Soyad</td>
                    <td>@calisan.UzmanlikAlani</td>
                    <td>@calisan.MusaitlikDurumu ? "Müsait" : "Meşgul"</td>
                    <td>
                        <a class="btn btn-primary" href="@Url.Action("EditEmployee", "Admin", new { id = calisan.Id })">Düzenle</a>
                        <a class="btn btn-danger" href="@Url.Action("DeleteEmployee", "Admin", new { id = calisan.Id })">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-success" href="@Url.Action("CreateEmployee", "Admin")">Yeni Çalışan Ekle</a>
</div>
